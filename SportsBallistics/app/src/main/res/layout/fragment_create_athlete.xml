<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.create_athlete.CreateAthleteFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_toddler_bg" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            android:scrollbars="none">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_toddler_inner_logo" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/edit_text_bg"
                        android:gravity="start"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text="Edit"
                        android:textSize="@dimen/_9sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtTotalTrainersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Create Athlete"
                    android:textColor="@color/actionBarColor"
                    android:textSize="@dimen/_16sdp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Full Name*"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/_9sdp" />

                        <EditText
                            android:id="@+id/etFullName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_below="@+id/txt_main"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edit_text_bg"
                            android:gravity="top|start"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Age*"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/_9sdp" />

                        <EditText
                            android:id="@+id/etAge"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_below="@+id/txt_main"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edit_text_bg"
                            android:gravity="top|start"
                            android:inputType="number"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Grade*"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/_9sdp" />

                        <EditText
                            android:id="@+id/etGrade"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_below="@+id/txt_main"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edit_text_bg"
                            android:gravity="top|start"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Email*"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/_9sdp" />

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_below="@+id/txt_main"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edit_text_bg"
                            android:gravity="top|start"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="User will be notified automatically via email notification"
                            android:textSize="@dimen/_7sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Password"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/_9sdp" />

                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_below="@+id/txt_main"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edit_text_bg"
                            android:gravity="top|start"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Contact#*"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/_9sdp" />

                        <EditText
                            android:id="@+id/etContact"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_below="@+id/txt_main"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edit_text_bg"
                            android:gravity="top|start"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Status*"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/_9sdp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edit_text_bg"
                            android:orientation="horizontal">

                            <AutoCompleteTextView
                                android:id="@+id/etStatus"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_below="@+id/txt_main"
                                android:layout_weight="1"
                                android:background="@null"
                                android:clickable="true"
                                android:editable="false"
                                android:focusable="false"
                                android:gravity="top|start"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/_8sdp" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llStateDropdown"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_1sdp"
                                android:background="#EFEFEF"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_3sdp">

                                <ImageView
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    android:src="@drawable/ic_drop_down_icon" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Address*"
                        android:textColor="@color/txtGrey"
                        android:textSize="@dimen/_9sdp" />

                    <EditText
                        android:id="@+id/etAddress1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_below="@+id/txt_main"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edit_text_bg"
                        android:gravity="top|start"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_8sdp" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="City*"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/_9sdp" />

                        <EditText
                            android:id="@+id/etCity"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_below="@+id/txt_main"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edit_text_bg"
                            android:gravity="top|start"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="State*"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/_9sdp" />

                        <EditText
                            android:id="@+id/etState"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_below="@+id/txt_main"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edit_text_bg"
                            android:gravity="top|start"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Zipcode*"
                            android:textColor="@color/txtGrey"
                            android:textSize="@dimen/_9sdp" />

                        <EditText
                            android:id="@+id/etZipcode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_below="@+id/txt_main"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edit_text_bg"
                            android:gravity="top|start"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_8sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="#753F93"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Submit" />

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_5sdp"
                    android:text="Cancel"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/_11sdp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</layout>
