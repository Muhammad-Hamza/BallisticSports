<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/clubListLayoutParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_toddler_bg" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backClubList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_90sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_90sdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/ic_toddler_inner_logo"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txtTotalTrainersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Athletes"
                    android:textColor="@color/actionBarColor"
                    android:textSize="@dimen/_15sdp" />

                <EditText
                    android:id="@+id/et_reason"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_below="@+id/txt_main"
                    android:background="@drawable/edit_text_bg"
                    android:drawableEnd="@drawable/ic_search"
                    android:gravity="top|start"
                    android:hint="Search for Athlete"
                    android:padding="@dimen/_4sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp" />

                <include
                    android:id="@+id/clubListHeader"
                    layout="@layout/athletes_list_item_header" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAtheletes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llMainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/ic_dash_profile"
                                android:padding="@dimen/_3sdp">

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/ivImageView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_temp_avatar"
                                    app:riv_corner_radius="@dimen/_5sdp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_bold"
                                    android:maxLines="1"
                                    android:text="John Smith"
                                    android:textColor="@color/actionBarColor"
                                    android:textSize="@dimen/_11sdp" />

                                <TextView
                                    android:id="@+id/tvClub"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:maxLines="1"
                                    android:text="Club Name: Club Name 1"
                                    android:textColor="@color/actionBarColor"
                                    android:textSize="@dimen/_8sdp" />

                                <TextView
                                    android:id="@+id/tvTrainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:maxLines="1"
                                    android:text="Trainer: Mike Thomas"
                                    android:textColor="@color/actionBarColor"
                                    android:textSize="@dimen/_8sdp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tvAge"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:maxLines="1"
                                    android:text="Age: 25"
                                    android:textColor="@color/actionBarColor"
                                    android:textSize="@dimen/_8sdp" />

                                <TextView
                                    android:id="@+id/tvGrade"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:maxLines="1"
                                    android:text="Grade: 10"
                                    android:textColor="@color/actionBarColor"
                                    android:textSize="@dimen/_8sdp" />

                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@color/colorSeperator" />

                        <TextView
                            android:id="@+id/tvAdditionalInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="John Smith Stats Overview"
                            android:textSize="@dimen/_14sdp" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none">


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.example.sportsballistics.utils.NonScrollRecyclerView
                                    android:id="@+id/recyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:layout_marginRight="@dimen/_20sdp" />

                                <RelativeLayout
                                    android:id="@+id/rlCoach"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvDashboard"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentTop="true"
                                        android:background="@drawable/btn_white_bg"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Dashboard"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/txtDetailHeading"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:fontFamily="@font/roboto_bold"
                                        android:text="Next"
                                        android:textColor="@color/actionBarColor"
                                        android:textSize="@dimen/_14sdp" />

                                    <TextView
                                        android:id="@+id/tvNext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/btn_white_bg"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Next"
                                        android:textSize="@dimen/_10sdp" />

                                    <com.github.mikephil.charting.charts.PieChart
                                        android:id="@+id/pieChart"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_160sdp"
                                        android:layout_below="@id/tvNext"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_15sdp" />

                                    <com.example.sportsballistics.utils.NonScrollRecyclerView
                                        android:id="@+id/rvCoachList"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/pieChart"
                                        android:layout_marginLeft="@dimen/_35sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_35sdp" />

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:id="@+id/tvSeperator"
                                        android:layout_width="@dimen/_130sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/rvCoachList"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        android:layout_marginBottom="@dimen/_6sdp"
                                        android:background="@drawable/ic_square_drawable"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvSummary"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvSeperator"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_4sdp"
                                            android:layout_marginBottom="@dimen/_4sdp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:gravity="center"
                                            android:text="AVG: 8 | SUM: 48"
                                            android:textColor="@color/actionBarColor"
                                            android:textSize="@dimen/_13sdp" />
                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                </RelativeLayout>

                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </ScrollView>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </ScrollView>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</layout>
