<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clubListHeaderParent"
    android:background="@color/white"
    android:paddingTop="@dimen/_10sdp"
    >
    <TextView
        android:id="@+id/txtSerialNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="S#."
        android:layout_marginStart="@dimen/_20sdp"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/actionBarColor" />
    <TextView
        android:id="@+id/txtClubName"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Club Name"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@+id/txtSerialNo"
        android:textColor="@color/actionBarColor" />

    <TextView
        android:id="@+id/txtAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Action"
        android:textColor="@color/actionBarColor"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@+id/txtClubName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/txtAction"
        android:background="@color/txtGrey"/>
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>